{
  "name": "16-Core Development Environment",
  "image": "mcr.microsoft.com/devcontainers/universal:2",

  // Request 16-core machine (premium GitHub account required)
  "hostRequirements": {
    "cpus": 16,
    "memory": "64gb",
    "storage": "128gb"
  },

  // Basic features (customize as needed)
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  // VS Code customizations - Extension control
  "customizations": {
    "vscode": {
      // Essential extensions only
      "extensions": [
        "anthropic.claude-code",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "ms-toolsai.jupyter",
        "cweijan.vscode-office",
        "grapecity.gc-excelviewer",
        "tomoki1207.pdf",
        "shd101wyy.markdown-preview-enhanced",
        "yzhang.markdown-all-in-one",
        "eamodio.gitlens"
      ],
      // Suppress ALL welcome screens, setup prompts, and notifications
      "settings": {
        // Extension management
        "extensions.autoCheckUpdates": false,
        "extensions.autoUpdate": false,
        "extensions.ignoreRecommendations": true,
        "extensions.showRecommendationsOnlyOnDemand": true,

        // Disable ALL welcome pages and walkthroughs
        "workbench.welcomePage.walkthroughs.openOnInstall": false,
        "workbench.startupEditor": "none",
        "workbench.tips.enabled": false,
        "gettingStarted.showOnStartup": false,

        // Disable prompts and notifications
        "update.mode": "none",
        "update.showReleaseNotes": false,
        "telemetry.telemetryLevel": "off",
        "workbench.enableExperiments": false,
        "workbench.survey.showSurvey": false,

        // Suppress extension-specific welcome screens
        "kombai.showWelcome": false,
        "kombai.showGettingStarted": false,
        "python.showStartPage": false,
        "jupyter.showStartPage": false,
        "gitlens.showWelcomeOnInstall": false,
        "gitlens.showWhatsNewAfterUpgrades": false,

        // Clean editor startup
        "workbench.editor.enablePreview": false,
        "window.restoreWindows": "none",
        "git.showPushSuccessNotification": false,

        // Terminal settings - no confirmation dialogs
        "terminal.integrated.showExitAlert": false,
        "terminal.integrated.confirmOnExit": "never",
        "terminal.integrated.confirmOnKill": "never"
      }
    }
  },

  // Common ports
  "forwardPorts": [3000, 5000, 8000, 8080],

  // Run install script if using dotfiles
  // Use $DOTFILES environment variable (set by GitHub Codespaces) for correct path
  "postCreateCommand": "bash -c 'if [ -n \"$DOTFILES\" ] && [ -f \"$DOTFILES/install.sh\" ]; then timeout 900 bash \"$DOTFILES/install.sh\"; else echo \"No dotfiles found, skipping installation\"; fi'",

  // Shutdown safety: warn and auto-save uncommitted changes
  "postStopCommand": "bash -c 'if git status --porcelain | grep -q .; then echo \"⚠️ WARNING: Uncommitted changes detected! Auto-saving...\"; git add -A && git commit -m \"Auto-save on shutdown: $(date '+%Y-%m-%d %H:%M:%S')\" && git push || echo \"❌ Failed to push changes\"; else echo \"✅ No uncommitted changes\"; fi'",

  // Set user
  "remoteUser": "codespace"
}
