{
  "name": "16-Core Development Environment",
  "image": "mcr.microsoft.com/devcontainers/universal:2",

  // Request 16-core machine (premium GitHub account required)
  "hostRequirements": {
    "cpus": 16,
    "memory": "64gb",
    "storage": "128gb"
  },

  // Basic features (customize as needed)
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  // VS Code customizations - Extension control
  "customizations": {
    "vscode": {
      // Core extensions (when Settings Sync is OFF)
      // If Settings Sync is ON, user's synced extensions take priority
      "extensions": [
        "anthropic.claude-code",
        "ms-edgedevtools.vscode-edge-devtools",
        "yzhang.markdown-all-in-one",
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "christian-kohler.npm-intellisense",
        "eamodio.gitlens",
        "PKief.material-icon-theme",
        "mechatroner.rainbow-csv",
        "ritwickdey.LiveServer"
      ],
      // Suppress ALL welcome screens, setup prompts, and notifications
      "settings": {
        // Extension management
        "extensions.autoCheckUpdates": false,
        "extensions.autoUpdate": false,
        "extensions.ignoreRecommendations": true,
        "extensions.showRecommendationsOnlyOnDemand": true,

        // CRITICAL: Block specific unwanted extensions (Kombai, Test Explorer, Cline)
        // These will be blocked whether Settings Sync is ON or OFF
        "extensions.ignoredRecommendations": [
          "kombai.kombai",
          "hbenl.vscode-test-explorer",
          "hocklabs.test-explorer",
          "littlefox.test-explorer",
          "saoudrizwan.claude-dev",
          "cline.cline"
        ],

        // Disable ALL welcome pages and walkthroughs
        "workbench.welcomePage.walkthroughs.openOnInstall": false,
        "workbench.startupEditor": "none",
        "workbench.tips.enabled": false,
        "gettingStarted.showOnStartup": false,

        // CRITICAL: Force settings to apply to all profiles (required for VS Code Web)
        // GitHub Issues #134073, #160635: VS Code Web IGNORES startupEditor without this!
        "workbench.settings.applyToAllProfiles": [
          "workbench.startupEditor",
          "workbench.welcomePage.walkthroughs.openOnInstall",
          "gettingStarted.showOnStartup",
          "workbench.tips.enabled"
        ],

        // Disable prompts and notifications
        "update.mode": "none",
        "update.showReleaseNotes": false,
        "telemetry.telemetryLevel": "off",
        "workbench.enableExperiments": false,
        "workbench.survey.showSurvey": false,

        // Suppress extension-specific welcome screens
        "kombai.showWelcome": false,
        "kombai.showGettingStarted": false,
        "python.showStartPage": false,
        "jupyter.showStartPage": false,
        "gitlens.showWelcomeOnInstall": false,
        "gitlens.showWhatsNewAfterUpgrades": false,

        // Clean editor startup
        "workbench.editor.enablePreview": false,
        "window.restoreWindows": "none",
        "git.showPushSuccessNotification": false,

        // Terminal settings - no confirmation dialogs
        "terminal.integrated.showExitAlert": false,
        "terminal.integrated.confirmOnExit": "never",
        "terminal.integrated.confirmOnKill": "never"
      }
    }
  },

  // Common ports
  "forwardPorts": [3000, 5000, 8000, 8080],

  // Run install script if using dotfiles
  // Use $DOTFILES environment variable (set by GitHub Codespaces) for correct path
  // CRITICAL: postCreateCommand runs BEFORE terminal is available - output goes to creation log
  // Status file will be created and automatically opened so user can watch progress
  "postCreateCommand": "bash -c 'if [ -n \"$DOTFILES\" ] && [ -f \"$DOTFILES/install.sh\" ]; then timeout 900 bash \"$DOTFILES/install.sh\" 2>&1 | tee /tmp/dotfiles-install-output.log; else echo \"No dotfiles found, skipping installation\"; fi'",

  // SOLUTION: Auto-open status file when codespace starts so user can see progress
  "postStartCommand": "bash -c 'STATUS_FILE=$(find /workspaces -maxdepth 2 -name \"DOTFILES-INSTALLATION-STATUS.txt\" -o -name \"dotfiles-install-output.log\" 2>/dev/null | head -1); if [ -n \"$STATUS_FILE\" ]; then echo \"\\n╔═══════════════════════════════════════════════════════════════════╗\"; echo \"║  📋 Dotfiles Installation Status (auto-opening in editor)        ║\"; echo \"╚═══════════════════════════════════════════════════════════════════╝\"; sleep 2; code \"$STATUS_FILE\"; fi'",

  // Shutdown safety: warn and auto-save uncommitted changes
  "postStopCommand": "bash -c 'if git status --porcelain | grep -q .; then echo \"⚠️ WARNING: Uncommitted changes detected! Auto-saving...\"; git add -A && git commit -m \"Auto-save on shutdown: $(date '+%Y-%m-%d %H:%M:%S')\" && git push || echo \"❌ Failed to push changes\"; else echo \"✅ No uncommitted changes\"; fi'",

  // Set user
  "remoteUser": "codespace"
}
